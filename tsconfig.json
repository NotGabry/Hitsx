{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": false,
      "rootDir": "src/",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": ["node_modules/@types", "src/types"]
    },
    "exclude": [
      "dist/",
      "node_modules/"
    ],
    "include": [
      "src/" 
    ]
}